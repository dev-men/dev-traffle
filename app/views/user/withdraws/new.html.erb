<% content_for :title, "Bank Account Details | Traffle" %>
<div class="container-fluid" style="background:#F5CBA7;">
  <div class="mainmenu-area">
    <div class="container-fluid">
      <div class="row">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="glyphicon glyphicon-align-justify" style="font-size:33px;color:#BA4A00;"></span>
          </button>
        </div>
        <div class="navbar-collapse collapse" style="padding:0px;margin:0px;">
          <ul class="nav navbar-nav" style="padding:0px;margin:0px;">
            <li><%= link_to("Home", root_path, class:"my_nav_bar")%></li>
            <li><%= link_to("Real Estate",  real_estate_homes_path, class:"my_nav_bar", onclick:"change(this, 1)")%></li>
            <li><%= link_to("Electronics",  electronics_homes_path, class:"my_nav_bar")%></li>
            <li><%= link_to("Phones and Tablets",  phone_and_tablets_homes_path, class:"my_nav_bar")%></li>
            <li><%= link_to("Automobiles",  automobiles_homes_path, class:"my_nav_bar")%></li>
            <li><%= link_to("Featured Items",  featured_items_homes_path, class:"my_nav_bar")%></li>
            <li><%= link_to("Raffle Items",  raffle_items_homes_path, class:"my_nav_bar")%></li>
            <li><%= link_to("Sell an Item",  new_user_product_path, class:"my_nav_bar")%></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row" >
  <% if notice %>
    <div id="notice_wrapper" class="my_notice">
      <center><p class="app_notice"><%= notice %></p></center>
    </div>
  <%elsif alert %>
    <div id="notice_wrapper" class="my_alert">
      <center><p class="app_alert"><%= alert %></p></center>
    </div>
  <% end %>
</div>
<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <div class="jumbotron" style="padding: 1em 0px 0px 0px;background:#FFFFFF;">
      <%= form_with(model: @recipient, url: user_withdraws_path, local: true, html: { class:"login", style:"min-width:100%;max-width:100%;padding-bottom:3em;" }) do |f| %>
            <p class="title" style="text-align:center;">Bank Account Details</p>
          <% if @recipient.errors.any? %>
            <div class="form-group alert alert-error alert-block" id="error_explanation">
              <button type="button" class="close" data-dismiss="alert">x</button>
              <% @recipient.errors.full_messages.each do |message| %>
                <h6 class="heading_error"><%= message%></h6>
              <% end %>
            </div>
          <% end %>
          <br>
          <div class="row">
            <div class="col-md-6 col-xs-12">
              <%= f.label :r_type, "Type", class:"label" %><br />
              <%= f.label :r_type, autofocus: true, value: @recipient.r_type, class: 'form-control', style:"font-size: 1em;", required: true %>
            </div>
            <div class="col-md-6 col-xs-12">
              <%= f.label :name, "Account Name", class:"label" %><br />
              <%= f.text_field :name, autofocus: true, placeholder: 'Account Name', class: 'form-control', style:"font-size: 1em;", required: true %>
            </div>
            <div class="col-md-6 col-xs-12">
              <%= f.label :account_number, "Account Number", class:"label" %><br />
              <%= f.text_field :account_number, autofocus: true,  placeholder: 'Account Number(Must be 10 ZEROs)',class: 'form-control', style:"font-size: 1em;", required: true %>
            </div>
            <div class="col-md-6 col-xs-12">
              <%= f.label :bank_code, "Bank Code", class:"label" %><br />
              <%= f.text_field :bank_code, autofocus: true, placeholder: 'Bank Code(Must be 044)', class: 'form-control', style:"font-size: 1em;", required: true %>
            </div>
            <div class="col-md-6 col-xs-12">
              <%= f.label :currency, "Currency", class:"label" %><br />
              <%= f.label :currency, autofocus: true, value: @recipient.currency, class: 'form-control', style:"font-size: 1em;", required: true %>
            </div>
            <div class="col-md-12 col-xs-12">
              <br/>
              <%= f.label :description, "Description", class:"label" %><br />
              <%= f.text_area :description, autofocus: true, placeholder: 'Enter Description', class: 'form-control', style:"font-size: 1em;", required: true %>
            </div>

          </div>
          <%= f.submit "Save", style:"margin-top:1.2em;"%>
      <%end%>
    </div>
  </div>
  <div class="col-md-2"></div>
</div>
