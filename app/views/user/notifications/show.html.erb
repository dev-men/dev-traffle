<% content_for :title, "Item Detail | Traffle" %>
<div class="container-fluid" style="background:#F5CBA7;">
  <div class="mainmenu-area">
    <div class="container-fluid">
      <div class="row">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="glyphicon glyphicon-align-justify" style="font-size:33px;color:#BA4A00;"></span>
          </button>
        </div>
        <div class="navbar-collapse collapse" style="padding:0px;margin:0px;">
          <ul class="nav navbar-nav" style="padding:0px;margin:0px;">
            <li><%= link_to("Home", root_path, class:"my_nav_bar")%></li>
            <li><%= link_to("Real Estate",  real_estate_homes_path, class:"my_nav_bar", onclick:"change(this, 1)")%></li>
            <li><%= link_to("Electronics",  electronics_homes_path, class:"my_nav_bar")%></li>
            <li><%= link_to("Phones and Tablets",  phone_and_tablets_homes_path, class:"my_nav_bar")%></li>
            <li><%= link_to("Automobiles",  automobiles_homes_path, class:"my_nav_bar")%></li>
            <li><%= link_to("Featured Items",  featured_items_homes_path, class:"my_nav_bar")%></li>
            <li><%= link_to("Raffle Items",  raffle_items_homes_path, class:"my_nav_bar")%></li>
            <li><%= link_to("Sell an Item",  new_user_product_path, class:"my_nav_bar")%></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row" >
  <% if notice %>
    <div id="notice_wrapper" class="my_notice">
      <center><p class="app_notice"><%= notice %></p></center>
    </div>
  <%elsif alert %>
    <div id="notice_wrapper" class="my_alert">
      <center><p class="app_alert"><%= alert %></p></center>
    </div>
  <% end %>
</div>
<div class="container-fluid" style="padding-bottom:5em;padding-top:3em;">
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-12">
          <h2><center>You have won this Product</center></h2>
          <br>
        </div>
      </div>
      <div class="single">
        <div class="col-md-12">
          <div class="col-md-5 grid col-xs-12">
        		<div class="flexslider">
        			  <ul class="slides">
                  <% @images = @product.images%>
                  <% @images.each do |i|%>
                    <li>
                      <%= image_tag(i.avatar, class:"img-responsive")%>
                    </li>
                  <%end%>
        			  </ul>
        		</div>
        	</div>

          <div class="col-md-7 col-xs-12">
            <div class="row">
              <div class="col-md-12 col-xs-12">
                <center>
                  <h1 class="admin_heading"><%= @product.title%></h1>
                </center>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 col-xs-12">
                <h4 class="admin_key">Item ID: </h4> <h4 class="admin_value"><%= @product.id%></h4>
              </div>
              <div class="col-md-12 col-xs-12">
                <h4 class="admin_key">Item Category: </h4> <h4 class="admin_value"><%= @product.category%></h4>
              </div>
              <div class="col-md-12 col-xs-12">
                <h4 class="admin_key">Item Ticket Price: </h4> <h4 class="admin_value">â‚¦<%= @product.ticket_price%></h4>
              </div>
              <br><br>
              <div class="col-md-12">
                <h4 class="admin_key">Item Description: </h4>
              </div>
              <div class="col-md-12">
                <h4 class="admin_value_1" style="margin:0px;"><%= @product.short_description %></h4>
              </div>
              <br><br>
              <div class="col-md-12">
                <h4 class="admin_key">Brief Description: </h4>
              </div>
              <div class="col-md-12">
                <h4 class="admin_value_1" style="margin:0px;"><%= @product.long_description %></h4>
              </div>
            </div>
            <br><br>
            <div class="row">
              <div class="col-md-12 col-xs-12">
                <br><br>
                <center>
                  <%= link_to("I received my Prize", received_user_notification_path(pid: @product.id, nid: @notification.id), class:"btn btn-block btn-success")%>
                </center>
              </div>
            </div>

          </div>
        </div>
      </div>

    </div>
  </div>
</div>
