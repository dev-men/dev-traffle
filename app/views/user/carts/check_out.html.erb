<% content_for :title, "Check Out | Traffle" %>

<!--content-->
<div class="content" style="padding-top: 10em;">
  <div class="container">
    <div class="content-top">
      <div class="jumbotron">
        <div class="row">
          <div class="col-md-12 col-xs-12">
            <h1><center style="color: #FFA07A;" >Check Out</center>
            </h1>
          </div>
          <% @subtotal = 0 %>
          <div class="row">
            <div class="col-md-4">
              <h3>Details</h3>
            </div>
            <div class="col-md-4">
            </div>
            <div class="col-md-4">
            </div>
          </div>
          <br>
          <table class="table table-hover">
            <thead>
              <tr>
                <th>NAME</th>
                <th>NUMBER OF TICKETS</th>
                <th>TOTAL TICKET AMOUNT</th>
              </tr>
            </thead>
            <tbody>
              <% @user_carts.each do |i| %>
                <tr>
                  <td><%= i.product.title %></td>
                  <td><%= i.total_price.to_i / 100 %></td>
                  <td><%= i.total_price %></td>
                  <% @subtotal = @subtotal + i.total_price %>
                </tr>
              <%end%>
              <tr>
                <td>SUBTOTAL</td>
                <td></td>
                <td><%= @subtotal %></td>
              </tr>
              <tr>
                <td>YOUR WALLET BALANCE</td>
                <td></td>
                <td>0.0</td>
              </tr>
            </tbody>
          </table>
          <div class="row">
            <div class="col-md-3" style="margin-top:1em;">
                <h3>ENTER AMOUNT </h3>
            </div>
            <%= form_for :amount,  url: pay_user_carts_path do |f| %>
              <div class="col-md-3 col-xs-12" style="height:4em;padding:0px;margin-top:0.5em">
                <div class="form-group">
                  <%=f.number_field :price, class:"form-control  price_field", placeholder:"Enter the amount", id:"inputdefault", min:"100", step:"100", required:true%>
                </div>
              </div>
              <div class="col-md-1 col-xs-12">
              </div>
              <div class="col-md-2 col-xs-12" style="margin-top:1em;">
                <h3>PAYSTACK</h3>
              </div>
              <div class="col-md-1 col-xs-12">
              </div>
              <div class="col-md-2 col-xs-12" style="padding:0px; margin-top:0.4em;">
                <%= f.submit "PAY", style:"float-left;width:100%;height:80%;", class:"btn  cart_button" do %>
                     <span class="glyphicon glyphicon-shopping-cart"></span>
                <% end %>
              </div>
            <%end%>
            <div class="col-md-4">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
