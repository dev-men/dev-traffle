<div class="col-md-3" style="padding:0px;margin-bottom:2em;">
  <nav class="navbar navbar-expand-sm navbar-light" style="background-color: rgba(229,231,233,1);" role="navigation">
    <div class="container" style="margin-top: 2em;">
      <div class="navbar-header">
        <div class="col-md-12" style="padding:0px;">
          <button class="navbar-toggle" data-target="#mainNavCollapse" data-toggle="collapse" type="button">
            <span class="glyphicon glyphicon-align-justify" style="font-size:33px;color:#BA4A00;"></span>
          </button>
          <center>
            <%if current_user.avatar.present? %>
              <%= image_tag (current_user.avatar(:original)), class: 'img-responsive img-circle img-thumbnail profile-img', style:"width:200px;height:200px;" %>
            <%elsif current_user.image_url != nil%>
              <%= image_tag (current_user.image_url), class: 'img-responsive img-circle img-thumbnail profile-img', style:"width:200px;height:200px;" %>
            <%else %>
              <%= image_tag ("user.png"), class: 'img-responsive img-circle img-thumbnail profile-img', style:"width:200px;height:200px;" %>
            <%end%>
            <br>
            <!--
             Image Upload Button through modal
            -->
            <button class="btn btn-success btn-sm" data-toggle="modal" data-target="#addPhoto">Change Profile Image</button>

            <h4 class="user_name"><%= current_user.name%></h4>
            <label class="customer_id">Customer ID: </label>
            <label class="customer_id_value"><%= current_user.id%></label>
            <br>
            <label class="customer_id">Tickets Purchased: </label>
            <label class="customer_id_value"><%= @user_no_of_tickets %></label>
            <br>
          </center>
          <hr style="height:4px;background:#DC7633;">
        </div>
      </div>
      <div class="navbar-collapse collapse">
      </div>
      <div class="collapse navbar-collapse" id="mainNavCollapse" >
        <ul class="navbar-nav navbar-left" style="list-style-type: none;">
          <li><%= link_to  "Dashboard", user_dashboard_path(current_user), style:"text-decoration:none;padding:5px;margin:2px;text-align:left;float:left;"%></li><br>
          <li><%= link_to  "My Profile", edit_user_registration_path, style:"text-decoration:none;padding:5px;margin:2px;text-align:left;float:left;" %></li><br>
          <li><%= link_to  "Notifications", user_notifications_path, style:"text-decoration:none;padding:5px;margin:2px;text-align:left;float:left;" %></li><br>
          <li><%= link_to  "Transactions", user_transactions_path, style:"text-decoration:none;padding:5px;margin:2px;text-align:left;float:left;" %></li><br>
          <li><%= link_to("Sell an Item",  new_user_product_path, style:"text-decoration:none;padding:5px;margin:2px;text-align:left;float:left;") %></li><br>
          <li><%= link_to("My Items",  user_products_path, style:"text-decoration:none;padding:5px;margin:2px;text-align:left;float:left;") %></li><br>
          <li><%= link_to("Approved Items",  approved_user_products_path, style:"text-decoration:none;padding:5px;margin:2px;text-align:left;float:left;") %></li><br>
          <li><%= link_to("Un-Approved Items",  unapproved_user_products_path, style:"text-decoration:none;padding:5px;margin:2px;text-align:left;float:left;") %></li><br>
          <li><%= link_to  "Logout", destroy_user_session_path, method: :delete, style:"text-decoration:none;padding:5px;margin:2px;text-align:left;float:left;" %></li><br>
        </ul>
      </div>
    </div>
  </nav>
</div>
