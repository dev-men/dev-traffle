<script>
 $(document).ready(function() {
   $('.flexslider').flexslider({
     animation: "slide",
     controlNav: "thumbnails"
   });
 });
</script>
<% content_for :title, "Item Detail | Traffle" %>
<div class="container-fluid" style="background:#F5CBA7;">
  <div class="mainmenu-area">
    <div class="container-fluid">
      <div class="row">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="glyphicon glyphicon-align-justify" style="font-size:33px;color:#BA4A00;"></span>
          </button>
        </div>
        <div class="navbar-collapse collapse" style="padding:0px;margin:0px;">
          <ul class="nav navbar-nav" style="padding:0px;margin:0px;">
            <li><%= link_to("Home", root_path, class:"my_nav_bar")%></li>
            <li><%= link_to("Real Estate",  real_estate_homes_path, class:"my_nav_bar", onclick:"change(this, 1)")%></li>
            <li><%= link_to("Electronics",  electronics_homes_path, class:"my_nav_bar")%></li>
            <li><%= link_to("Phones and Tablets",  phone_and_tablets_homes_path, class:"my_nav_bar")%></li>
            <li><%= link_to("Automobiles",  automobiles_homes_path, class:"my_nav_bar")%></li>
            <li><%= link_to("Featured Items",  featured_items_homes_path, class:"my_nav_bar")%></li>
            <li><%= link_to("Raffle Items",  raffle_items_homes_path, class:"my_nav_bar")%></li>
            <li><%= link_to("Recent Winners", recent_winners_homes_path, class:"my_nav_bar")%></li>
            <li><%= link_to("Sell an Item",  new_user_product_path, class:"my_nav_bar")%></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row" >
  <% if notice %>
    <div id="notice_wrapper" class="my_notice">
      <center><p class="app_notice"><%= notice %></p></center>
    </div>
  <%elsif alert %>
    <div id="notice_wrapper" class="my_alert">
      <center><p class="app_alert"><%= alert %></p></center>
    </div>
  <% end %>
</div>
<div class="container-fluid" style="padding-top:1em;">
  <div class="single">
    <div class="container">
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-12">
            <h4 class="modal-title" style="text-align:center;color:#BA4A00;"><%= @product.title%></h4>
          </div>
          <% @images = @product.images%>
          <% @images.each do |i|%>
            <div class="col-md-3 col-xs-6">
              <%= image_tag(i.avatar, class:"img-responsive img-thumbnail", style:"width:100%;height:180px;")%>
            </div>
          <%end%>
        </div>
        <div class="row">
          <div class="col-md-2 col-xs-12">
            <h4 class="admin_key">Item ID: </h4> <h4 class="admin_value"><%= @product.id%></h4>
          </div>
          <div class="col-md-4 col-xs-12">
            <h4 class="admin_key">Item Category: </h4> <h4 class="admin_value"><%=@product.category%></h4>
          </div>
          <div class="col-md-3 col-xs-12">
            <h4 class="admin_key">Total Tickets: </h4> <h4 class="admin_value"><%= @product.total_tickets %></h4>
          </div>
          <div class="col-md-3 col-xs-12">
            <h4 class="admin_key">Sold Tickets: </h4> <h4 class="admin_value"><%= @product.sold_tickets %></h4>
            <br>
            <br>
          </div>
          <div class="col-md-12 col-xs-12">
          </div>
          <br>
          <div class="col-md-12">
            <h4 class="admin_value_1" style="margin:0px; word-break: normal;"><%= @product.short_description %></h4>
            <br>
            <br>
            <br>
          </div>
          <div class="col-md-12">
            <h4 class="admin_value_1" style="margin:0px; word-break: normal;"><%= @product.long_description %></h4>
          </div>
        </div>
        <br><br>
        <div class="row" style="margin-top:2em;">
          <div class="col-md-5"></div>
          <div class="col-md-2">
            <%= link_to("Edit Product", edit_user_product_path(@product.id), class:"btn btn-info")%>
          </div>
          <div class="col-md-5"></div>
        </div>
      </div>
    </div>
  </div>
</div>
