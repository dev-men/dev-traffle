<% content_for :title, "Notifications | Traffle" %>
<div class="container">
  <div class="jumbotron" style="padding-left:5px;">
    <h4 class="my_text_color" style="text-align:center;">Notifications</h4>
    <ul style="list-style-type:none;width:100%:padding:5px;">
      <%@notifications.each do |n|%>
        <li style="width:100%;color:#BA4A00;border: 1px solid #BA4A00;background:#FFFFFF;padding:10px;"><%= n.description%></li>
      <%end%>
    <ul>
  </div>
  <center>
    <%= will_paginate @notifications, renderer: BootstrapPagination::Rails %>
  </center>
</div>
