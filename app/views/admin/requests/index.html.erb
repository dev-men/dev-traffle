<% content_for :title, "Withdraw Request | Traffle" %>
<div class="container">
  <div class="row table-responsive">
    <br><br>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Request</th>
          <th>Show</th>
        </tr>
      </thead>
      <% @requests.each do |d|%>
        <tr>
          <td>
            <%= d.description%>
          </td>
          <td>
            <%= link_to("Show Request",  admin_request_path(d), class:"btn btn-block btn-success") %>
          </td>
        </tr>
      <%end%>
    </table>
  </div>
  <center>
    <%= will_paginate @requests, renderer: BootstrapPagination::Rails %>
  </center>
</div>
