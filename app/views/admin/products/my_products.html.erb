<% content_for :title, "My Items | Traffle" %>
<div class="container-fluid my_top_div" style="padding-top:6em;">
  <div class="row">
    <div class="col-md-12">
      <div class="products">
    		<h2>My Items</h2>
        <hr style="background:#BA4A00;height:2px;">
        <div class="col-md-12">
          <% @products.each do |p|%>
            <div class="col-md-4 col-md4" style="margin-bottom:1em;">
              <div class="col-md1 simpleCart_shelfItem">
                <% if p.images[0] %>
                  <%= link_to admin_product_path(p.id) do %>
                    <%= image_tag(p.images[0].avatar, class:"img-responsive")%>
                  <%end%>
                <%else%>
                  <%= link_to home_path(1) do %>
                    <%= image_tag('pi.png', class:"img-responsive")%>
                  <%end%>
                <%end%>
                <h3><a href="#"><%= p.title%></a></h3>
              </div>
            </div>
          <%end%>
        </div>
        <center>
          <%= will_paginate @product, renderer: BootstrapPagination::Rails %>
        </center>
      </div>
    </div>
  </div>
</div>
