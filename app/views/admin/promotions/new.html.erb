<% content_for :title, "New Promotion | Traffle" %>

<div class="col-md-12">
  <div class="jumbotron" style="padding:0px 0px 0px 0px;background:#11AA99;">
    <%= form_with(model: @promotion, url: admin_promotions_path, local: true, html: { class:"login", style:"min-width:100%;max-width:100%;padding-bottom:3em;" }) do |f| %>
          <p class="title" style="text-align:center;">New Promotion</p>

        <% if @promotion.errors.any? %>
          <div class="form-group alert alert-error alert-block" id="error_explanation">
            <button type="button" class="close" data-dismiss="alert">x</button>
            <% @promotion.errors.full_messages.each do |message| %>
              <h6 class="heading_error"><%= message%></h6>
            <% end %>
          </div>
        <% end %>
        <br>
        <div class="row">
          <div class="col-md-12 col-xs-12">
            <%= f.label :subject, "Subject", class:"label" %><br />
            <%= f.text_field :subject, autofocus: true, placeholder: 'Enter Subject', class: 'form-control', style:"font-size: 1em;", required: true %>
          </div>

          <div class="col-md-12 col-xs-12">
            <%= f.label :message, "Message", class:"label" %><br />
            <%= f.text_area :message, autofocus: true, placeholder: 'Type Message', class: 'form-control', size: "10x10", style:"rows:10;resize: none; font-size: 1em;", required: true %>
          </div>
        </div>
        <%= f.submit "Save", style:"margin-top:1.2em;"%>
    <%end%>
  </div>
</div>
