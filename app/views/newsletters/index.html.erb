<% content_for :title, "All Subscribers | Traffle" %>
<script>
  $(document).ready(function(){
    $('#subscribers').dataTable({
        "pagingType": "full_numbers"
      });
  });
</script>

<div div class="container my_top_div" style="padding-top:1em;padding-bottom:2em;">
  <div class="row">
    <div class="col-md-12 no-pad-xs">
      <div class="row login_signup_heading" style="padding:0px;margin:0px;">
        <div class="col-md-12">
          <center><h3 class="heading_text">All Subscribers</h3></center>
        </div>
      </div>
      <div class="jumbotron" style="padding-top:1em;padding-bottom:1em;background:#F0B27A;border-radius:0 0 1em 1em;">
        <div class="row">
          <div class="col-md-12 login_signup_panel">
            <center>
              <br>
              <table id="subscribers" class="table display responsive">
                <thead class="table_header">
                  <tr>
                    <th style="font-size:0.8em;">Name</th>
                    <th style="font-size:0.8em;">Email</th>
                    <!-- <th>Block</th> -->
                  </tr>
                </thead>
                <tbody>
                  <% @subscribers.each do |user| %>
                    <tr class="table_row">
                      <td style="color:#FFFFFF;font-size:0.9em;"><%= user.name %></td>
                      <td style="color:#FFFFFF;font-size:0.9em;"><%= user.email %></td>
                    </tr>
                  <% end %>
                  <% @register_users.each do |user| %>
                    <tr class="table_row">
                      <td style="color:#FFFFFF;font-size:0.9em;"><%= user.name %></td>
                      <td style="color:#FFFFFF;font-size:0.9em;"><%= user.email %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
              <br>
            </center>
          </div>
          <div class="col-md-9">
          </div>
          <div class="col-md-3">
            <%= link_to("Send Email to Subscribers", new_admin_promotion_path, class:"btn btn-primary")%>
          
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
