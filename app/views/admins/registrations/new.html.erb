<% content_for :title, "Admin SignUp | Traffle" %>
<div class="container-fluid signup_login_bg" style="padding-top:1em;padding-bottom:2em;">
  <br><br>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <center>
        <%= form_for(resource, as: resource_name, :html => {:class => "login"}, url: registration_path(resource_name)) do |f| %>
          <p class="title">ADMIN SIGNUP</p>
          <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.label :email, class:"label"%><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Enter Email', class: 'form-control', required: true %>
          </div>
          <div class="form-group">
            <%= f.label :password, class:"label" %>
            <% if @minimum_password_length %>
            <em class="label-sm">(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", placeholder: 'Enter Password', class: 'form-control', required: true %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, class:"label" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Enter Password Confirmation', class: 'form-control', required: true %>
          </div>
          <div class="form-group">
            <%= f.submit "SIGNUP" %>
          </div>
        <% end %>

        <%= render "admins/shared/links" %>
      </center>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>
