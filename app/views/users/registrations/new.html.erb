<% content_for :title, "SignUp | Traffle" %>
<div class="container-fluid" style="background:#F5CBA7;">
  <div class="mainmenu-area">
    <div class="container-fluid">
      <div class="row">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="glyphicon glyphicon-align-justify" style="font-size:33px;color:#BA4A00;"></span>
          </button>
        </div>
        <div class="navbar-collapse collapse" style="padding:0px;margin:0px;">
          <ul class="nav navbar-nav" style="padding:0px;margin:0px;">
            <li><%= link_to("Home", root_path, class:"my_nav_bar")%></li>
            <li><%= link_to("Real Estate",  real_estate_homes_path, class:"my_nav_bar", onclick:"change(this, 1)")%></li>
            <li><%= link_to("Electronics",  electronics_homes_path, class:"my_nav_bar")%></li>
            <li><%= link_to("Phones and Tablets",  phone_and_tablets_homes_path, class:"my_nav_bar")%></li>
            <li><%= link_to("Automobiles",  automobiles_homes_path, class:"my_nav_bar")%></li>
            <li><%= link_to("Featured Items",  featured_items_homes_path, class:"my_nav_bar")%></li>
            <li><%= link_to("Promoted Items",  promoted_items_homes_path, class:"my_nav_bar")%></li>
            <li><%= link_to("Sell an Item",  new_user_product_path, class:"my_nav_bar")%></li>
            <li><%= link_to("Contact Us",  new_contact_path, class:"my_nav_bar")%></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row" >
  <% if notice %>
    <div id="notice_wrapper" class="my_notice">
      <center><p class="app_notice"><%= notice %></p></center>
    </div>
  <%elsif alert %>
    <div id="notice_wrapper" class="my_alert">
      <center><p class="app_alert"><%= alert %></p></center>
    </div>
  <% end %>
</div>
<!--banner-->
<div class="container-fluid signup_login_bg" style="padding-bottom:2em;">
  <br><br>
  <div class="row">
    <div class="col-md-6 col-xs-12"  style="margin-bottom: 3em;">
      <center>
        <%= form_for(resource, as: resource_name, :html => {:class => "login"}, url: registration_path(resource_name)) do |f| %>
          <p class="title">SIGNUP</p>
          <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.text_field :name, autofocus: true, placeholder: 'Your Name', class: 'form-control', style:"font-size: 1em;", required: true %>
          </div>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Your Email', class: 'form-control', required: true %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", placeholder: 'Your Password  (6 characters minimum)', class: 'form-control', required: true %>
          </div>
          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Password Confirmation', class: 'form-control', required: true %>
          </div>
          <div class="form-group">
            <%= link_to "Terms and Services", terms_homes_path, style:"color:#229954;text-decoration:none;"%>
          </div>
          <div class="form-group">
            <%= f.submit "SIGNUP" %>
          </div>
        <% end %>
      </center>
    </div>
    <div class="col-md-6 col-xs-12">
      <div class="jumbotron" style="background: #FFFFFF;">
        <h2 class="heading_sign">SIGN UP / SIGN IN</h2>
        <br>
        <h3 class="text_sign">Registration is required for new users who wish to play for an
          item or want to sell an item on the TRAFFLE. Signing up is easy and free of
          charge, simply provide an email address and
          you are good to go. Afterwards, proceed to setting up your
          profile to provide a detailed information of yourself. We would
          love to know more about you.</h3>
        <%= render "users/shared/links"%>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="terms_and_conditions" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="padding-top:8em;">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div style="background-color:#F5CBA7;">
        <div class="modal-header" >
          <center>
            <h5 class="modal-title" id="exampleModalLabel" style="color:#BA4A00; font-size:20px;">Terms And Conditions</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </center>
        </div>
      </div>
      <div class="modal-body">
        <div style="font-size: 12px;">
          Terms and conditions will be displayed here!
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
